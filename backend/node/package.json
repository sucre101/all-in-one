{
  "name": "node-express-api-backend",
  "version": "1.0.0",
  "author": "Alex K <vaniulen84@gmail.com>",
  "main": "dist",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --legacy-watch -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "dependencies": {
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "mariadb": "^3.2.2",
    "morgan": "^1.8.0",
    "resource-router-middleware": "^0.6.0",
    "sequelize": "^6.34.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-watch": "^7.8.1",
    "eslint": "^3.1.1",
    "nodemon": "^1.9.2"
  }
}
